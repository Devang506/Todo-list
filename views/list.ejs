<%- include("header") -%>

<div class="nav1">
  <form  action="/search" method="post">
    <div class="form-row align-items-center">
      <div class="col-sm-3 my-1">

        <input type="text"  id="inlineFormInputName" placeholder="Search For Your List" name = "existCustomList">
      </div>
      <hr>
      <div class="col-auto my-1">
        <button type="submit" class="btn1">Search</button>
      </div>
    </div>
  </form>

</div>


  <div class="box1" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box1">
    <% newListItems.forEach(function(items) { %>
      <form action="/delete" method="post">
        <div class="item">
          <input  name = "checkbox" value = "<%=items._id%>" onChange="this.form.submit()" type="checkbox">
          <p><%=  items.item  %></p>
        </div>
        <input type="hidden" name="listName" value="<%= listTitle %>"></input>
        <input type="hidden" name="listItem" value="<%= items.item%>"></input>
      </form>

      <% }); %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off" autofocus>
        <button class = "plus" type="submit" name="list" value = <%= listTitle %>  >+</button>
      </form>
  </div>
<div class="box1 dabba">
     <form class="item" action="/cutomRoute" method="post">
     <input type="text" placeholder="New List" name="newCustomList"  autofocus>
     <button class = "plus" type="submit" >+</button>
   </form>


   </div>


